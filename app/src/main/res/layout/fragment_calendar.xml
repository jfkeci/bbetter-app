<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CalendarFragment"
    android:background="#211D44">

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_back_black"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_forward_black"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="300dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarTextColor="@color/white"
        app:compactCalendarBackgroundColor="@color/myDarkBlue"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/myTealGreen"
        app:compactCalendarCurrentDayBackgroundColor="@color/myTealGreen2"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/etEvent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:ems="10"
        android:inputType="textShortMessage"
        android:hint="@string/event_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btnNext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSaveEvent"
        android:background="@drawable/custom_edit_text"/>
    <ImageButton
        android:id="@+id/btnSaveEvent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/etEvent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_add_circle_white"
        android:backgroundTint="@color/myTealGreen"/>
    <Spinner
        android:id="@+id/spinnerEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="@id/etEvent"
        app:layout_constraintBottom_toTopOf="@id/etEvent"/>
    <ImageButton
        android:id="@+id/btnSetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_time_white"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@id/etEvent"
        app:layout_constraintLeft_toRightOf="@id/spinnerEventType"
        android:backgroundTint="@color/myTealGreen"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp"
        android:text="@string/midnight_time"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etEvent"
        app:layout_constraintLeft_toRightOf="@id/btnSetTime"
        android:textColor="@color/white"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEvent"
        android:scrollbars="vertical"
        android:padding="8dp"
        android:background="#211D44"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>