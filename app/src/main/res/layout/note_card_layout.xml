<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cw"
    android:layout_width="120dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#48B9AC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/ivUp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrow_up_white"/>
        <ImageView
            android:id="@+id/ivUpEdit"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toRightOf="@id/ivUp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_archive_white"/>
        <ImageView
            android:id="@+id/ivPress"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toRightOf="@id/ivUpEdit"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_touch_white"/>
        <ImageView
            android:id="@+id/ivPressArchive"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            app:layout_constraintRight_toLeftOf="@id/ivDown"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_edit_white" />
        <ImageView
            android:id="@+id/ivDownDelete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/ic_delete_sweep_white"/>
        <ImageView
            android:id="@+id/ivDown"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            app:layout_constraintRight_toLeftOf="@id/ivDownDelete"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrow_down_white"/>
        <View
            android:id="@+id/cardLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/ivDown"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/cardLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:gravity="start">

            <TextView
                android:id="@+id/twNoteDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_margin="3dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/twNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="3dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/twNoteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="3dp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
