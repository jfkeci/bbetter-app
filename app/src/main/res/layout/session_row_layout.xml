<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="5dp"
        android:padding="5dp"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <ImageView
                android:id="@+id/sessionTimeIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/singleSessionlength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/sessionTimeIcon"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginStart="6dp"/>
            <TextView
                android:id="@+id/singleSessionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/singleSessionlength"
                app:layout_constraintLeft_toRightOf="@id/sessionTimeIcon"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="7sp"
                android:textColor="@color/white"
                android:layout_marginStart="6dp"/>
            <TextView
                android:id="@+id/singleSessionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/singleSessionDate"
                app:layout_constraintLeft_toRightOf="@id/sessionTimeIcon"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="7sp"
                android:textColor="@color/white"
                android:layout_marginStart="6dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>